{
  "name": "impfen",
  "description": "Kiebitz Web Applications",
  "version": "1.0.0",
  "private": true,
  "license": "AGPL-3.0-or-later",
  "contributors": [
    "Benjamin Bender <bb@codepoet.de>",
    "Andreas Dewes"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/impfen/apps-inoeg"
  },
  "bugs": "https://github.com/impfen/apps-inoeg/issues",
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "build": "pnpm run build --filter ./apps*",
    "build:user": "pnpm build --filter ./apps/user",
    "build:mediator": "pnpm build --filter ./apps/mediator",
    "build:provider": "pnpm build --filter ./apps/provider",
    "build:i18n": "NODE_ENV=development lingui extract --clean && lingui compile",
    "dev": "pnpm dev --filter ./apps*",
    "dev:user": "pnpm dev --filter ./apps/user",
    "dev:provider": "pnpm dev --filter ./apps/provider",
    "dev:mediator": "pnpm dev --filter ./apps/mediator",
    "lint": "pnpm run lint --recursive --if-present",
    "lint:staged": "lint-staged --allow-empty",
    "lint:css": "npx stylelint '**/*.css'",
    "typecheck": "pnpm run typecheck --parallel --recursive --if-present",
    "test": "jest",
    "test:e2e": "pnpm run test:e2e --filter ./apps*",
    "docker": "docker run -p 3000:3000 -it apps-inoeg:main",
    "docker:build": "docker build . -f Dockerfile -t apps-inoeg:main",
    "i18n": "lingui",
    "i18n:extract": "NODE_ENV=development lingui extract --clean",
    "i18n:compile": "lingui compile",
    "i18n:build": "NODE_ENV=development lingui extract --clean && lingui compile"
  },
  "dependencies": {
    "@babel/core": "^7.16.7",
    "@babel/preset-env": "^7.16.8",
    "@babel/preset-typescript": "^7.16.7",
    "@lingui/cli": "^3.13.0",
    "@lingui/conf": "^3.13.0",
    "@lingui/core": "^3.13.0",
    "babel-plugin-macros": "^3.1.0"
  },
  "devDependencies": {
    "@types/node": "^17.0.10",
    "husky": "^7.0.4",
    "jest": "^27.4.7",
    "prettier": "^2.5.1",
    "stylelint": "^14.2.0",
    "stylelint-config-recommended": "^6.0.0",
    "stylelint-no-unsupported-browser-features": "^5.0.2",
    "typescript": "^4.5.4"
  },
  "resolutions": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "browserslist": [
    "defaults",
    "not ie 11",
    "not op_mini all"
  ],
  "jest": {
    "testEnvironment": "jsdom",
    "projects": [
      "<rootDir>/packages/common",
      "<rootDir>/apps/user",
      "<rootDir>/apps/provider",
      "<rootDir>/apps/mediator"
    ]
  },
  "stylelint": {
    "plugins": [
      "stylelint-no-unsupported-browser-features"
    ],
    "extends": [
      "stylelint-config-recommended"
    ],
    "rules": {
      "plugin/no-unsupported-browser-features": [
        true,
        {
          "severity": "warning"
        }
      ],
      "at-rule-no-unknown": [
        true,
        {
          "ignoreAtRules": [
            "tailwind",
            "layer",
            "variants",
            "responsive",
            "screen"
          ]
        }
      ],
      "block-no-empty": null,
      "selector-pseudo-class-no-unknown": [
        true,
        {
          "ignorePseudoClasses": "global"
        }
      ]
    }
  }
}
