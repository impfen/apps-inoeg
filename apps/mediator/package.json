{
  "name": "@kiebitz-oss/app-mediator",
  "description": "Kiebitz Mediator Web Applications",
  "version": "1.0.0",
  "private": true,
  "license": "AGPL-3.0-or-later",
  "contributors": [
    "Benjamin Bender <bb@codepoet.de>",
    "Andreas Dewes"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/kiebitz-oss/apps-inoeg",
    "directory": "apps/mediator"
  },
  "bugs": "https://github.com/kiebitz-oss/apps-inoeg/issues",
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "postinstall": "pnpm i18n:build",
    "dev": "next dev",
    "build": "next build && next export --outdir dist",
    "start": "next start",
    "test": "jest --passWithNoTests",
    "lint": "next lint",
    "typecheck": "tsc --noEmit",
    "i18n": "lingui",
    "i18n:extract": "NODE_ENV=development lingui extract --clean ",
    "i18n:compile": "lingui compile",
    "i18n:build": "NODE_ENV=development lingui extract --clean && lingui compile"
  },
  "dependencies": {
    "@babel/core": "^7.16.7",
    "@carbon/icons-react": "^10.44.0",
    "@fontsource/ibm-plex-sans": "^4.5.1",
    "@headlessui/react": "^1.4.2",
    "@kiebitz-oss/config": "workspace:*",
    "@kiebitz-oss/ui": "workspace:*",
    "@lingui/cli": "^3.13.0",
    "@lingui/core": "^3.13.0",
    "@lingui/macro": "^3.13.0",
    "@lingui/react": "^3.13.0",
    "@storybook/react": "^6.4.12",
    "@tailwindcss/forms": "^0.4.0",
    "@tailwindcss/typography": "^0.5.0",
    "@types/node": "^17.0.8",
    "autoprefixer": "^10.4.2",
    "babel-plugin-macros": "^3.1.0",
    "clsx": "^1.1.1",
    "make-plural": "^7.0.0",
    "next": "^12.0.8",
    "postcss": "^8.4.5",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-hook-form": "^7.23.0",
    "react-use": "^17.3.2",
    "tailwindcss": "^3.0.13",
    "typescript": "^4.5.4",
    "vanellus": "link:../../../vanellus-inoeg"
  },
  "devDependencies": {
    "@testing-library/dom": "^8.11.1",
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.4.0",
    "@types/react": "^17.0.38",
    "babel-jest": "^27.4.6",
    "eslint": "^8.6.0",
    "jest": "^27.4.7",
    "jest-axe": "^5.0.1"
  },
  "browserslist": [
    "defaults",
    "not ie 11",
    "not op_mini all"
  ],
  "postcss": {
    "plugins": {
      "tailwindcss/nesting": {},
      "tailwindcss": {},
      "autoprefixer": {}
    }
  },
  "lingui": {
    "locales": [
      "de",
      "en"
    ],
    "sourceLocale": "de",
    "format": "po",
    "catalogs": [
      {
        "path": "<rootDir>/locales/{locale}/messages",
        "include": [
          "<rootDir>"
        ],
        "exclude": [
          "**/node_modules/**"
        ]
      }
    ],
    "rootDir": "src",
    "orderBy": "messageId"
  },
  "jest": {
    "displayName": "app-mediator",
    "roots": [
      "<rootDir>"
    ],
    "testEnvironment": "jsdom",
    "testURL": "http://localhost:3000/",
    "setupFilesAfterEnv": [
      "@testing-library/jest-dom",
      "@testing-library/jest-dom/extend-expect",
      "jest-axe/extend-expect"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/.next/",
      "<rootDir>/dist/"
    ],
    "transform": {
      "^.+\\.(js|jsx|ts|tsx)$": [
        "babel-jest",
        {
          "presets": [
            "next/babel"
          ],
          "plugins": [
            "macros"
          ]
        }
      ]
    }
  },
  "eslintConfig": {
    "extends": "next/core-web-vitals",
    "root": true,
    "settings": {
      "tailwindcss": {
        "groupByResponsive": true
      }
    },
    "ignorePatterns": [
      "node_modules",
      "dist",
      ".next"
    ],
    "rules": {
      "tailwindcss/no-custom-classname": "off",
      "react/no-unescaped-entities": "off",
      "@next/next/no-img-element": "off"
    }
  }
}
