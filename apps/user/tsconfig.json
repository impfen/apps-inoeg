{
  "extends": "../../tsconfig.json",
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "@kiebitz-oss/user",
  "compilerOptions": {
    "module": "esnext",
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "outDir": "dist",
    "incremental": true,
    "jsx": "preserve",
    "baseUrl": "./src",
    "paths": {
      "@kiebitz-oss/common": ["../../../packages/common/src"],
      "@kiebitz-oss/common/*": ["../../../packages/common/src/*"],
      "vanellus": ["../../../packages/vanellus/src"]
    },
    "esModuleInterop": true,
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": ["next-env.d.ts", "assets.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", ".next", "dist", "**/*.stories.tsx"]
}
