{
  "name": "@impfen/common",
  "version": "1.0.0",
  "scripts": {
    "dev": "onchange -i 'src/**' -- svelte-kit package",
    "buildx": "svelte-kit package",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
    "test": "jest --passWithNoTests",
    "lint": "eslint --ignore-path .gitignore .",
    "lint:all": "prettier --ignore-path .gitignore --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
    "lint:fix": "prettier --ignore-path .gitignore --write --plugin-search-dir=. ."
  },
  "type": "module",
  "sideEffects": false,
  "main": "./src/index.ts",
  "module": "./src/index.ts",
  "types": "./src/index.ts",
  "svelte": "./src/index.ts",
  "devDependencies": {
    "@fontsource/ibm-plex-sans": "^4.5.3",
    "@impfen/browserslist-config": "workspace:^1.0.0",
    "@impfen/jest-config": "workspace:^1.0.0",
    "@impfen/postcss-config": "workspace:^1.0.0",
    "@impfen/stylelint-config": "workspace:^1.0.0",
    "@impfen/eslint-config": "workspace:^1.0.0",
    "@sveltejs/kit": "next",
    "@typescript-eslint/eslint-plugin": "^5.11.0",
    "@typescript-eslint/parser": "^5.11.0",
    "dayjs": "^1.10.7",
    "eslint": "^8.8.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^26.1.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-regexp": "^1.5.1",
    "eslint-plugin-svelte3": "^3.4.0",
    "eslint-plugin-testing-library": "^5.0.5",
    "normalize.css": "^8.0.1",
    "onchange": "^7.1.0",
    "postcss-html": "^1.3.0",
    "postcss-load-config": "^3.1.2",
    "prettier": "^2.5.1",
    "prettier-plugin-svelte": "^2.6.0",
    "sanitize.css": "^13.0.0",
    "stylelint": "^14.4.0",
    "stylelint-config-recommended": "^7.0.0",
    "stylelint-no-unsupported-browser-features": "^5.0.2",
    "svelte": "^3.46.4",
    "svelte-check": "^2.4.3",
    "svelte-intl-precompile": "^0.8.0",
    "svelte-jester": "^2.3.1",
    "svelte-preprocess": "^4.10.3",
    "svelte2tsx": "^0.5.3",
    "tslib": "^2.3.1",
    "typescript": "^4.5.5"
  },
  "jest": {
    "preset": "@impfen/jest-config"
  },
  "browserslist": [
    "extends @impfen/browserslist-config"
  ],
  "stylelint": {
    "extends": [
      "@impfen/stylelint-config"
    ]
  }
}
