{
  "name": "@impfen/common",
  "version": "0.8.1",
  "scripts": {
    "dev": "onchange -i 'src/**' -- svelte-kit package",
    "buildx": "svelte-kit package",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
    "test": "jest --passWithNoTests",
    "lint": "eslint --ignore-path .gitignore .",
    "lint:all": "prettier --ignore-path .gitignore --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
    "lint:fix": "prettier --ignore-path .gitignore --write --plugin-search-dir=. ."
  },
  "type": "module",
  "sideEffects": false,
  "main": "./src/index.ts",
  "module": "./src/index.ts",
  "types": "./src/index.ts",
  "svelte": "./src/index.ts",
  "devDependencies": {
    "@fontsource/ibm-plex-sans": "^4.5.5",
    "@iconify-json/carbon": "^1.1.2",
    "@impfen/browserslist-config": "workspace:^0.8.1",
    "@impfen/eslint-config": "workspace:^0.8.1",
    "@impfen/jest-config": "workspace:^0.8.1",
    "@impfen/postcss-config": "workspace:^0.8.1",
    "@impfen/stylelint-config": "workspace:^0.8.1",
    "@sveltejs/kit": "next",
    "@typescript-eslint/eslint-plugin": "^5.15.0",
    "@typescript-eslint/parser": "^5.15.0",
    "error-stack-parser": "^2.0.7",
    "eslint": "^8.11.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jest": "^26.1.1",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-regexp": "^1.6.0",
    "eslint-plugin-svelte3": "^3.4.1",
    "eslint-plugin-testing-library": "^5.1.0",
    "mdsvex": "^0.10.5",
    "onchange": "^7.1.0",
    "postcss": "^8.4.12",
    "postcss-import": "^14.0.2",
    "postcss-load-config": "^3.1.3",
    "postcss-preset-env": "^7.4.2",
    "prettier": "^2.6.0",
    "prettier-plugin-svelte": "^2.6.0",
    "stylelint": "^14.6.0",
    "stylelint-config-recommended": "^7.0.0",
    "stylelint-no-unsupported-browser-features": "^5.0.3",
    "svelte": "^3.46.4",
    "svelte-check": "^2.4.6",
    "svelte-intl-precompile": "^0.9.0",
    "svelte-jester": "^2.3.2",
    "svelte-preprocess": "^4.10.4",
    "svelte2tsx": "^0.5.6",
    "tslib": "^2.3.1",
    "typescript": "^4.6.2",
    "unplugin-icons": "^0.13.4"
  },
  "jest": {
    "preset": "@impfen/jest-config"
  },
  "browserslist": [
    "extends @impfen/browserslist-config"
  ],
  "stylelint": {
    "extends": [
      "@impfen/stylelint-config"
    ]
  }
}
