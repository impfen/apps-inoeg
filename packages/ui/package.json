{
  "name": "@kiebitz-oss/ui",
  "description": "Kiebitz Web Applications",
  "version": "1.0.0",
  "author": "Benjamin Bender <bb@codepoet.de>",
  "private": true,
  "license": "AGPL-3.0-or-later",
  "main": "src/index.ts",
  "sideEffects": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/kiebitz-oss/apps-inoeg",
    "directory": "packages/ui"
  },
  "bugs": "https://github.com/kiebitz-oss/apps-inoeg/issues",
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "test": "jest",
    "typecheck": "tsc --noEmit",
    "i18n": "lingui",
    "i18n:extract": "NODE_ENV=development lingui extract --clean ",
    "i18n:compile": "lingui compile",
    "i18n:build": "NODE_ENV=development lingui extract --clean && lingui compile"
  },
  "dependencies": {
    "@babel/core": "^7.16.7",
    "@headlessui/react": "^1.4.2",
    "@lingui/cli": "^3.13.0",
    "@lingui/macro": "^3.13.0",
    "@lingui/react": "^3.13.0",
    "babel-plugin-macros": "^3.1.0",
    "clsx": "^1.1.1",
    "next": "^12.0.8",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-hook-form": "^7.23.0",
    "react-use": "^17.3.2",
    "typescript": "^4.5.4"
  },
  "devDependencies": {
    "@storybook/addons": "^6.4.12",
    "@storybook/client-api": "^6.4.12",
    "@storybook/preview-web": "^6.4.12",
    "@storybook/react": "^6.4.12",
    "@storybook/testing-react": "^1.2.3",
    "@testing-library/dom": "^8.11.1",
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "jest": "^27.4.7",
    "jest-axe": "^5.0.1",
    "ts-jest": "^27.1.2"
  },
  "browserslist": [
    "defaults",
    "not ie 11",
    "not op_mini all"
  ],
  "lingui": {
    "locales": [
      "de",
      "en"
    ],
    "sourceLocale": "de",
    "format": "po",
    "catalogs": [
      {
        "path": "<rootDir>/locales/{locale}/messages",
        "include": [
          "<rootDir>"
        ],
        "exclude": [
          "**/node_modules/**"
        ]
      }
    ],
    "rootDir": "src",
    "orderBy": "messageId"
  },
  "jest": {
    "displayName": "ui",
    "roots": [
      "<rootDir>"
    ],
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "@testing-library/jest-dom",
      "@testing-library/jest-dom/extend-expect",
      "jest-axe/extend-expect"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/dist/"
    ]
  }
}
