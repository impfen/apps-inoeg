{
  "name": "@kiebitz-oss/storybook",
  "description": "Kiebitz Web Applications",
  "version": "1.0.0",
  "author": "Benjamin Bender <bb@codepoet.de>",
  "private": true,
  "license": "AGPL-3.0-or-later",
  "sideEffects": false,
  "files": [
    "dist/**"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/kiebitz-oss/apps-inoeg",
    "directory": "packages/storybook"
  },
  "bugs": "https://github.com/kiebitz-oss/apps-inoeg/issues",
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "dev": "start-storybook -p 9000",
    "build:sb": "build-storybook --output-dir dist",
    "clean": "rimraf --no-glob ./dist .tsbuildinfo .ultra.cache.json",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@babel/core": "^7.16.7",
    "@fontsource/ibm-plex-sans": "^4.5.1",
    "@lingui/macro": "^3.13.0",
    "@lingui/react": "^3.13.0",
    "@storybook/addon-a11y": "^6.4.12",
    "@storybook/addon-actions": "^6.4.12",
    "@storybook/addon-essentials": "^6.4.12",
    "@storybook/addon-links": "^6.4.12",
    "@storybook/addon-postcss": "^2.0.0",
    "@storybook/addon-viewport": "^6.4.12",
    "@storybook/addons": "^6.4.12",
    "@storybook/builder-webpack5": "^6.4.12",
    "@storybook/client-api": "^6.4.12",
    "@storybook/manager-webpack5": "^6.4.12",
    "@storybook/preview-web": "^6.4.12",
    "@storybook/react": "^6.4.12",
    "@storybook/testing-react": "^1.2.3",
    "@testing-library/dom": "^8.11.1",
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.4.0",
    "@types/jest-axe": "^3.5.3",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "autoprefixer": "^10.4.2",
    "babel-loader": "^8.2.3",
    "babel-plugin-macros": "^3.1.0",
    "eslint": "^8.6.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^25.3.4",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-plugin-regexp": "^1.5.1",
    "eslint-plugin-storybook": "^0.5.5",
    "eslint-plugin-testing-library": "^5.0.3",
    "jest-axe": "^5.0.1",
    "lint-staged": "^12.1.7",
    "next": "^12.0.8",
    "postcss": "^8.4.5",
    "postcss-flexbugs-fixes": "^5.0.2",
    "postcss-loader": "^6.2.1",
    "postcss-preset-env": "^7.2.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rimraf": "^3.0.2",
    "storybook-addon-next-router": "^3.1.1",
    "tailwindcss": "^3.0.13",
    "typescript": "^4.5.4",
    "webpack": "^5.66.0"
  },
  "browserslist": [
    "defaults",
    "not ie 11",
    "not op_mini all"
  ],
  "lingui": {
    "locales": [
      "de",
      "en"
    ],
    "sourceLocale": "de",
    "format": "po",
    "orderBy": "messageId"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "../../eslintrc.base.js",
      "plugin:react/recommended",
      "plugin:react-hooks/recommended",
      "plugin:jsx-a11y/recommended"
    ],
    "plugins": [
      "testing-library",
      "storybook"
    ],
    "env": {
      "browser": true,
      "es6": true,
      "node": true
    },
    "rules": {
      "react/prop-types": "off",
      "react/react-in-jsx-scope": "off",
      "jsx-a11y/anchor-is-valid": "off"
    },
    "overrides": [
      {
        "files": [
          "**/*.test.{ts,tsx}"
        ],
        "extends": [
          "plugin:testing-library/react"
        ]
      },
      {
        "files": [
          "**/*.stories.{ts,tsx,mdx}"
        ],
        "extends": [
          "plugin:storybook/recommended",
          "plugin:storybook/csf-strict"
        ],
        "rules": {
          "storybook/use-storybook-testing-library": "off"
        }
      }
    ]
  }
}
